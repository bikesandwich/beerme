<div class="home">
<h1>All Beers</h1>



<% if @beers %>

         <% @beers.each do |beer| %>
         
         <div class="beer">
         <h2> <%= link_to beer.title, beer %></h2>

            <!-- <img src="/assets/barrel.png" class="barrel" width="40" height="40"> -->
            <p class="brewery">Brewery: <%= beer.brewery %></p>
            <!-- <img src="/assets/wheat.png" class="wheat" width="50" height="50">-->
            <p class="style">Style: <%= beer.style %></span></p>
            <!-- <img src="/assets/checkin.png" class="checkin" width="50" height="50"> -->
            <p class="checkin">Number of check-ins: <%= CheckIn.count(:all, :conditions => ['beer_id = ?', beer.id]) %> </p>
	
			
            
         </div> 
         <% end %>




<% end %>

<br />
<div class="button">
<%= link_to 'New Beer', new_beer_path %>
</div>
</div>