<div class="single home">


<div class="back">
<%= link_to '<< Back', beers_path %>
</div>
<p id="notice"><%= notice %></p>


<h1> <%= @user.user_name %></h1>

<div class="beer">
<p>
  <b>User type:</b>
  <%= @user.user_type %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>


<%= link_to 'edit', edit_user_path(@user) %> | <%= link_to 'delete', @user, method: :delete, data: { confirm: 'Are you sure?' } %><br />
<%= link_to 'All users', users_path %>

</div>

<h2>Reviews by <%= @user.user_name %></h2>
  <% @user.check_in.order("created_at DESC").each do |r|  %>
  <div class="beer">
<p>
<strong> <%= link_to r.beer.title, r.beer %></strong><br>
Rating: <%= r.rating %><br>
Review: <%= r.review %><br>
<%= r.wishlist ? "On wishlist" : "Not on wishlist" %><br>


Review date: <%= r.created_at %>

</p>
<small><%= link_to 'edit', edit_check_in_path(r) %></small>
</div>
<% end %>

</div>